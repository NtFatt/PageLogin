@{
    ViewBag.Title = "Đổi thông tin";
}

<h2>Đổi thông tin</h2>
<body>
    <div>
        @RenderBody()
    </div>

    <form method="post" action="@Url.Action("ChangeInfo", "Account")">
        <div>
            <label for="FullName">Tên đăng nhập:</label>
            <input type="text" id="LoginName" name="LoginName" required />
        </div>
        <div>
            <label for="Email">Email:</label>
            <input type="email" id="Email" name="Email" required />
        </div>
        <div>
            <button type="submit">Cập nhật thông tin</button>
        </div>
    </form>
</body>