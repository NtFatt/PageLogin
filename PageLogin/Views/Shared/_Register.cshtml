<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng Ký</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Link Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div>
        @RenderBody()
    </div>
    <header class="header">
        <nav class="nav">
            <ul>
                <li><a href="~/Home/Contact">Liên hệ</a></li>
                <li><a href="~/Home/About">About</a></li>
                <li><a href="#">Service</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </nav>
        <div class="search">
            <input type="text" placeholder="Search...">
            <a> <i class="fa-solid fa-magnifying-glass"></i></a>
        </div>
    </header>
    <div class="background"></div>
    <section class="home">
        <div class="content">
            <a href="#" class="logo"> StarLight </a>
            <h2> Welcom!</h2>
            <h3> To Our Nem Website </h3>
            <pre> Chào Các Bạn </pre>
            <div class="icon">
                <i class="fa-brands fa-facebook"></i>
                <i class="fa-brands fa-twitter"></i>
                <i class="fa-brands fa-instagram"></i>
                <i class="fa-brands fa-telegram"></i>
            </div>
        </div>
        <div class="login">
            <h2> Đăng Ký</h2>
            <form id="loginForm">
                <div class="input">
                    <input type="text" id="username" class="input1" placeholder="Tên Đăng Nhập" required>
                    <i class="fa-solid fa-user"></i>
                </div>
                <div class="input">
                    <input type="email" id="email" class="input1" placeholder="Email" aria-label="Email" required>                    <i class="fa-solid fa-envelope"></i>
                    <i class="fa-solid fa-times" id="emailError" style="display: none; color: red;"></i>
                    <i class="fa-solid fa-check" id="emailSuccess" style="display: none; color: green;"></i>
                </div>
                <div class="input">
                    <input type="password" id="password" class="input1" placeholder="Mật Khẩu" required>
                    <i class="fa-solid fa-eye" id="togglePassword" style="cursor: pointer;"></i>
                </div>
                <div class="check">
                    <label><input type="checkbox"> Nhớ tôi</label>
                </div>
                <div class="button" id="registerButtonContainer">
                    <button class="btn" id="registerButton">Đăng Ký</button>
                </div>
                <div class="sign-up">
                    <div id="error-message" style="color: red; display: none;"></div> <!-- Thông báo lỗi -->
                    <div id="success-message" style="color: green; display: none;">
                        Đăng ký thành công!
                        <button id="backToLogin" style="margin-top: 10px; margin-left:-30px; display: none;">
                        Quay lại trang đăng nhập
                        </button>
                    </div>
                </div>
                <div class="sign-up" id="signUpMessage" style="display: block;">
                    <span class="signup-text">Bạn đã có tài khoản?</span>
                    <span><a href="@Url.Action("Test")">Đăng Nhập</a></span>
                </div>        
                
            </form>
        </div>
    </section>
    <script>
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('password');

        togglePassword.addEventListener('click', function () {
            // Chuyển đổi type giữa 'password' và 'text'
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);

            // Thay đổi biểu tượng con mắt
            this.classList.toggle('fa-eye-slash');
        });
    </script>
    <script>
        const form = document.getElementById('loginForm');
        const emailInput = document.getElementById('email');
        const emailErrorIcon = document.getElementById('emailError');
        const emailSuccessIcon = document.getElementById('emailSuccess');

        form.addEventListener('submit', function (event) {
            const emailValue = emailInput.value;

            // Kiểm tra nếu email không chứa gmail.com
            if (!emailValue.endsWith('gmail.com')) {
                alert('Please enter a valid email address ending with gmail.com');
                emailErrorIcon.style.display = 'inline'; // Hiển thị biểu tượng dấu X
                emailSuccessIcon.style.display = 'none'; // Ẩn biểu tượng dấu tích
                event.preventDefault(); // Ngăn chặn việc gửi form
            } else {
                emailErrorIcon.style.display = 'none'; // Ẩn biểu tượng dấu X
                emailSuccessIcon.style.display = 'inline'; // Hiển thị biểu tượng dấu tích
            }
        });

        // Kiểm tra định dạng email ngay khi người dùng nhập
        emailInput.addEventListener('input', function () {
            if (!emailInput.value.endsWith('gmail.com')) {
                emailErrorIcon.style.display = 'inline'; // Hiển thị biểu tượng dấu X
                emailSuccessIcon.style.display = 'none'; // Ẩn biểu tượng dấu tích
            } else {
                emailErrorIcon.style.display = 'none'; // Ẩn biểu tượng dấu X
                emailSuccessIcon.style.display = 'inline'; // Hiển thị biểu tượng dấu tích
            }
        });
    </script>
    <script>
        document.getElementById('loginForm').addEventListener('submit', function (event) {
            const username = document.getElementById('username').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const emailErrorIcon = document.getElementById('emailError');
            const emailSuccessIcon = document.getElementById('emailSuccess');
            const errorMessage = document.getElementById('error-message');
            const successMessage = document.getElementById('success-message');
            const registerButtonContainer = document.getElementById('registerButtonContainer'); // Phần tử chứa nút đăng ký
            const backToLoginButton = document.getElementById('backToLogin'); // Nút quay lại
            const signUpMessage = document.getElementById('signUpMessage'); // Phần câu hỏi và liên kết đăng nhập
        
            errorMessage.style.display = 'none'; // Ẩn thông báo lỗi ban đầu
            successMessage.style.display = 'none'; // Ẩn thông báo thành công
            backToLoginButton.style.display = 'none'; // Ẩn nút quay lại ban đầu
            signUpMessage.style.display = 'block';

            let isValid = true; // Biến để kiểm tra tính hợp lệ

            // Kiểm tra tên đăng nhập
            if (username.trim() === "") {
                errorMessage.textContent = "Tên đăng nhập không được để trống.";
                isValid = false;
            }

            // Kiểm tra email
            if (!email.endsWith('gmail.com')) {
                errorMessage.textContent = "Email phải kết thúc bằng gmail.com.";
                emailErrorIcon.style.display = 'inline';
                emailSuccessIcon.style.display = 'none';
                isValid = false;
            } else {
                emailErrorIcon.style.display = 'none';
                emailSuccessIcon.style.display = 'inline';
            }

            // Kiểm tra mật khẩu
            if (password.length < 6) {
                errorMessage.textContent = "Mật khẩu phải có ít nhất 6 ký tự.";
                isValid = false;
            }

            // Nếu không hợp lệ, ngăn gửi biểu mẫu
            if (!isValid) {
                event.preventDefault(); // Ngăn không gửi biểu mẫu
                errorMessage.style.display = 'block'; // Hiển thị thông báo lỗi
            } else {
                // Nếu hợp lệ, hiển thị thông báo thành công
                event.preventDefault(); // Ngăn không gửi biểu mẫu để xử lý chuyển hướng
                successMessage.style.display = 'block'; // Hiển thị thông báo thành công

                // Ẩn nút đăng ký và hiển thị nút quay lại
                registerButtonContainer.style.display = 'none'; // Ẩn nút đăng ký
                signUpMessage.style.display = 'none'; // Ẩn phần câu hỏi và liên kết
                backToLoginButton.style.display = 'block'; // Hiển thị nút quay lại

                // Thêm sự kiện cho nút quay lại
                backToLoginButton.addEventListener('click', function () {
                    window.location.href = "@Url.Action("Test")"; // Thay đổi đường dẫn này thành đường dẫn trang đăng nhập của bạn
                });
            }
        });

    </script>
