    /* Container for the movie list */
    /* Khung chứa danh sách phim */

    .movie-list {
        display: flex;
        flex-wrap: wrap; /*cho phép các phần tử tự động xuống dòng khi không đủ không gian trong một hàng.*/
        justify-content: space-between; /*tạo khoảng cách đều nhau giữa các phần tử.*/
        gap: 20px;
        max-width: 1200px; /*giới hạn chiều rộng tối đa của .movie-list là 1200px.*/
        margin: 0 auto;
    }

    .movie-container {
        display: flex; /* Sử dụng Flexbox để bố trí các phần tử */
        justify-content: space-between; /* Giãn đều các banner */
        flex-wrap: wrap; /* Đảm bảo các banner có thể xuống dòng nếu không đủ không gian */
    }
    /* Cấu trúc của mỗi thẻ phim */
    .movie { /* Là lớp CSS cho từng thẻ phim. */
        flex: 1 1 23%; /* Chiếm khoảng 23% chiều rộng, tạo khoảng cách giữa các thẻ */
        text-align: center; /* Căn giữa nội dung */
        background-color: #f9f9f9; /* Màu nền cho thẻ phim */
        padding: 10px; /* Khoảng đệm bên trong thẻ phim */
        position: relative; /* Giữ vị trí cho phần tử con có thể sử dụng vị trí tuyệt đối */
        overflow: hidden; /* Ẩn phần dư thừa bên ngoài khung */
        cursor: pointer; /* Đổi chuột thành hình bàn tay khi di chuột qua */
    }

        .movie:hover .movie-info {
            opacity: 1;
        }

        /* Cấu trúc hình ảnh */
        .movie img {
            width: 100%;
            height: auto;
            display: block;
            transition: transform 0.3s ease;
        }

        /* Tùy chọn kiểu chữ */
        .movie h3 {
            font-size: 1.1em; /* Đặt kích thước font là 1.1 lần kích thước chuẩn */
            margin: 10px 0 10px; /* Thiết lập khoảng cách bên trên là 10px và bên dưới là 10px */
            color: #000; /* Màu chữ đen cho tiêu đề */
            font-weight: bold;
        }

        .movie p {
            font-size: 0.9em; /* Kích thước chữ cho các đoạn văn */
            color: #800080; /* Màu chữ tím cho đoạn văn */
            margin: 5px 0; /* Khoảng cách giữa các đoạn văn */
        }

    .movie-info {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7); /* Màu nền tối nhưng trong hơn */
        color: #fff; /* Màu chữ trắng */
        display: flex;
        flex-direction: column; /* Sắp xếp theo cột */
        align-items: flex-start; /* Căn lề trái */
        justify-content: flex-start; /* Căn đầu lên trên */
        opacity: 0; /* Ẩn bảng thông tin mặc định */
        transition: opacity 0.3s ease; /* Hiệu ứng chuyển động khi hiện bảng */
        text-align: left; /* Căn lề trái cho nội dung */
        padding: 10px 15px; /* Thay đổi padding để tạo không gian bên trong */
        overflow-y: auto; /* Cho phép cuộn nếu nội dung quá dài */
        z-index: 2; /* Đặt z-index cao hơn */
    }

        .movie-info h4 {
            font-size: 1.2em;
            margin: 0; /* Giảm khoảng cách giữa các dòng */
            line-height: 1; /* Điều chỉnh line-height để giảm khoảng cách giữa các dòng */
        }

        .movie-info p {
            font-size: 1em;
            margin: 0; /* Đặt margin về 0 để dồn lên trên */
            line-height: 1; /* Điều chỉnh line-height để giảm khoảng cách giữa các dòng */
            color: white;
            margin-top: 5px; /* Điều chỉnh khoảng cách theo nhu cầu */
            padding-top: 5px; /* Giảm khoảng cách từ trên xuống */
        }

        .movie-info strong {
            margin: 0; /* Đặt margin về 0 để dồn lên trên */
            line-height: 1; /* Điều chỉnh line-height để giảm khoảng cách giữa các dòng */
            color: #800080;
            font-weight: bold;
            display: block; /* Đảm bảo mỗi phần tử strong nằm trên một dòng mới */
            margin-top: 5px; /* Giảm khoảng cách giữa strong và các phần tử khác */
        }

        .movie-info button {
            background-color: #f39c12; /* Màu nền của nút */
            color: #fff; /* Màu chữ của nút */
            border: none; /* Không có đường viền */
            padding: 8px 12px; /* Khoảng cách bên trong nút */
            margin: 5px; /* Khoảng cách bên ngoài nút */
            border-radius: 4px; /* Bo góc nút */
            cursor: pointer; /* Hiển thị con trỏ tay khi hover */
        }

    /* Hiệu ứng hover */
    .movie:hover .movie-info {
        opacity: 1;
    }

