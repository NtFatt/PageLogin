    .slider-container {
        position: relative;
        width: 100%;
        max-width: 1200px; /* Đặt theo kích thước header */
        margin: 0 auto; /* Canh giữa */
        overflow: hidden; /* Để ẩn các ảnh không hiển thị */
        background-color: black; /* Nền đen */
    }

    .slider-wrapper {
        display: flex;
        transition: transform 0.5s ease-in-out; /* Hiệu ứng chuyển động mượt */
        width: 100%;
    }

        .slider-wrapper img {
            width: 100%; /* Mỗi ảnh chiếm toàn bộ chiều rộng container */
            height: auto; /* Đảm bảo tỷ lệ ảnh không bị thay đổi */
        }

    /* Ẩn mũi tên mặc định */
    button {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: transparent;
        border: none;
        font-size: 30px;
        color: rgba(255, 255, 255, 0.7);
        cursor: pointer;
        z-index: 10;
        opacity: 0; /* Ẩn mũi tên */
        transition: opacity 0.3s ease; /* Hiệu ứng chuyển mượt */
    }

    /* Hiển thị mũi tên khi trỏ chuột vào slider */
    .slider-container:hover button {
        opacity: 1; /* Hiển thị mũi tên */
    }

    button:hover {
        color: white;
    }

    .slide-left {
        left: 10px;
    }

    .slide-right {
        right: 10px;
    }

    .showtimes {
        padding: 20px; /* Khoảng cách trong cho phần lựa chọn */
