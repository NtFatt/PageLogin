<style type="text/css">
    /* Định dạng cho các mục trong submenu */
    .submenu a {
        display: block;
        padding: 10px 15px;
        color: black;
        text-decoration: none;
        background-color: #f9f9f9;
        border-radius: 4px;
        margin-bottom: 5px;
        opacity: 0; /* Ban đầu ẩn các mục menu */
        max-height: 0; /* Đặt chiều cao tối đa là 0 khi không hover */
        overflow: hidden; /* Ẩn phần thừa khi không hover */
        transition: all 0.3s ease; /* Thêm hiệu ứng chuyển động */
    }

    /* Khi hover vào submenu, mở rộng các mục menu */
    .submenu:hover a {
        opacity: 1; /* Làm các mục menu hiển thị */
        max-height: 100px; /* Mở rộng chiều cao của menu */
    }

    .submenu a:hover {
        background-color: #f0f0f0; /* Thêm hiệu ứng hover */
    }

    /* Phần menu tóm tắt */
    .submenu .summary {
        display: block;
        padding: 10px 15px;
        color: black;
        background-color: #f9f9f9;
        border-radius: 4px;
        cursor: pointer;
        text-align: center;
    }

        /* Thêm hiệu ứng khi hover vào phần tóm tắt */
        .submenu .summary:hover {
            background-color: #e0e0e0;
        }
</style>

@RenderBody()

<div class="user-menu">
    <!-- Menu hiện ra khi di chuột vào tên người dùng -->
    <div class="submenu">
        <!-- Phần tóm tắt, hiển thị "Thông tin" khi không hover -->
        <div class="summary">Thông tin</div>

        <!-- Các mục menu sẽ được ẩn khi không hover -->
        <a href="~/Account/ProfileInfo">Đổi thông tin cá nhân</a>
        <a href="~/Account/ChangePassword">Đổi mật khẩu</a>
        <a href="~/Account/Logout">Đăng xuất</a>
        <a href="@Url.Action("Login")">Đăng nhập lại</a>
    </div>
</div>
